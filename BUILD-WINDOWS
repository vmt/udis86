¦   ¦       +-- udcli.pdb
¦   +-- x64
¦   ¦   +-- libudis86.dll
¦   ¦   +-- libudis86.pdb
¦   ¦   +-- udcli.exe
¦   ¦   +-- udcli.pdb
¦   +-- x86
¦       +-- libudis86.dll
¦       +-- libudis86.pdb
¦       +-- udcli.exe
¦       +-- udcli.pdb
